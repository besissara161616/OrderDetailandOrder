
<div class="modal fade" id="addOrd">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addOrd">Add Order</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
                <div class="modal-body">
                    <form action="Create">
                        <div class="form-group">
                            <label>ความกว้าง</label>
                            <input asp-validation-for="OrdPrintWidth" name="OrdPrintWidth"/>
                        </div>

                        <div class="form-group">
                            <label>ความยาว</label>
                            <input asp-validation-for="OrdPrintHeight" name="OrdPrintHeight" />
                        </div>
                    </form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal">C</button>
                        <button type="button" class="btn btn-success" data-save="modal">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>